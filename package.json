{
  "name": "sayari-blog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"API,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:api": "node scripts/dev-api-server.js",
    "dev:full": "concurrently --names \"API,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "build": "npm run build:data && npm run build:vite && npm run build:static",
    "build:data": "node scripts/build-static-data.js",
    "build:vite": "cross-env SSG_MODE=true vite build",
    "build:static": "node scripts/generate-static-html.js",
    "build:spa": "vite build",
    "build:vercel": "npm run build:data && npm run build:spa",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "deploy:vercel": "node scripts/vercel-deploy.js",
    "perf:test": "node scripts/performance-test.js",
    "perf:build": "npm run build && npm run preview & sleep 5 && npm run perf:test && pkill -f 'vite preview'",
    "test:connection": "node scripts/test-connection.js",
    "test:r2": "node scripts/test-r2-connection.js",
    "setup:r2": "node scripts/setup-r2-credentials.js",
    "setup:r2-cors": "node scripts/setup-r2-cors.js",
    "setup:admin": "node scripts/setup-admin-user.js",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "verify-deployment": "node scripts/verify-deployment.js",
    "prepare": "is-ci || husky",
    "postinstall": "is-ci || husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unused-imports": "^4.1.4",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "puppeteer": "^24.15.0",
    "typescript": "~5.8.3",
    "vite-plugin-prerender": "^1.0.8",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.857.0",
    "@supabase/supabase-js": "^2.53.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "p-limit": "^3.1.0",
    "playwright": "^1.54.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.5.2",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.7.1",
    "slugify": "^1.6.6",
    "vite": "^7.0.4",
    "vite-plugin-static-copy": "^3.1.1",
    "zod": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
